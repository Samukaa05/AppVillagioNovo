<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppVillagio.ViewModels"
             x:Class="AppVillagio.Views.LoginPage"
             BackgroundColor="#703F25"
             Shell.NavBarIsVisible="False">

	<Grid RowDefinitions="*, Auto">
		<ScrollView Grid.Row="0" VerticalOptions="Center">
			<VerticalStackLayout Spacing="25" 
                         Padding="0"
                         VerticalOptions="Center"
                         HorizontalOptions="Center">

				<Image Source="logo_michelin.png"
               WidthRequest="246"
               HeightRequest="106"
               Margin="0,0,0,30"
               HorizontalOptions="Center" />

				<VerticalStackLayout Spacing="8" WidthRequest="365">

					<Label Text="{Binding TituloIdentificador}"
                   TextColor="White"
                   FontSize="16"
                   FontAttributes="None"
                   HorizontalOptions="Start"/>
					<Border StrokeShape="RoundRectangle 15"
                    StrokeThickness="0"
                    BackgroundColor="#A5755C"
                    HeightRequest="50">

						<Border.Shadow>
							<Shadow Brush="Black" Offset="0,4" Radius="4" Opacity="0.25"/>
						</Border.Shadow>

						<Entry Text="{Binding Identificador}"
                       Placeholder="{Binding PlaceholderIdentificador}"
                       PlaceholderColor="#D9BCA9"
                       TextColor="White"
                       FontSize="16"
                       VerticalOptions="Center"
                       Margin="15,0"/>
					</Border>
				</VerticalStackLayout>

				<VerticalStackLayout Spacing="8" WidthRequest="365">
					<Label Text="Insira sua Senha:"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Start"/>

					<Border StrokeShape="RoundRectangle 15"
                    StrokeThickness="0"
                    BackgroundColor="#A5755C"
                    HeightRequest="50">

						<Border.Shadow>
							<Shadow Brush="Black" Offset="0,4" Radius="4" Opacity="0.25"/>
						</Border.Shadow>

						<Grid ColumnDefinitions="*, Auto" Padding="15,0">
							<Entry Grid.Column="0"
                           Text="{Binding Senha}"
                           IsPassword="{Binding IsPasswordSecret}"
                           TextColor="White"
                           VerticalOptions="Center"/>

							<ImageButton Grid.Column="1"
                                 Source="icon_eye.png"
                                 Command="{Binding ToggleSenhaCommand}"
                                 HeightRequest="24"
                                 WidthRequest="24"
                                 VerticalOptions="Center"
                                 BackgroundColor="Transparent"/>
						</Grid>
					</Border>
				</VerticalStackLayout>

				<Border StrokeShape="RoundRectangle 15"
                StrokeThickness="0"
                BackgroundColor="#A5755C"
                WidthRequest="200"
                HeightRequest="60"
                Margin="0,20,0,0">
					<Border.Shadow>
						<Shadow Brush="Black" Offset="0,4" Radius="4" Opacity="0.25"/>
					</Border.Shadow>

					<Border.GestureRecognizers>
						<TapGestureRecognizer Command="{Binding LoginCommand}"/>
					</Border.GestureRecognizers>

					<Label Text="Entrar"
                   TextColor="White"
                   FontSize="24"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
				</Border>

				<VerticalStackLayout Spacing="2" HorizontalOptions="Center" Margin="0,10,0,0">
					<Label Text="NÃ£o possui um Login?"
                   TextColor="White"
                   FontSize="14"
                   HorizontalOptions="Center"/>

					<Label Text="Cadastre-se"
                   TextColor="#D9BCA9" 
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextDecorations="Underline">
						<Label.GestureRecognizers>
							<TapGestureRecognizer Command="{Binding IrParaCadastroCommand}"/>
						</Label.GestureRecognizers>
					</Label>
				</VerticalStackLayout>

			</VerticalStackLayout>
		</ScrollView>

		<Grid Grid.Row="1" 
              BackgroundColor="#47150D"
              HeightRequest="50" 
              VerticalOptions="End">

			<ImageButton Source="icon_home_white.png"
                         Command="{Binding VoltarHomeCommand}"
                         HeightRequest="42"
                         WidthRequest="42"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         BackgroundColor="Transparent"/>
		</Grid>

	</Grid>
</ContentPage>