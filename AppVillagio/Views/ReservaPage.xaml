<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppVillagio.ViewModels"
             x:Class="AppVillagio.Views.ReservaPage"
             BackgroundColor="#47150D"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto, *, Auto, Auto">

        <Image Grid.Row="0"
               Source="logo_michelin.png"
               HeightRequest="80"
               HorizontalOptions="Center"
               Margin="0,30,0,10"/>

        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never">

            <Border StrokeShape="RoundRectangle 30"
                    BackgroundColor="#A5755C"
                    StrokeThickness="0"
                    WidthRequest="340"
                    Margin="20,0"
                    Padding="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">

                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,10" Radius="10" Opacity="0.3"/>
                </Border.Shadow>

                <VerticalStackLayout Spacing="15">

                    <Label Text="Complete o Formulário:" 
                           TextColor="White" FontSize="18" HorizontalOptions="Center" FontAttributes="Bold"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Nome do Representante:" TextColor="#E0C09F" FontSize="12"/>
                        <Frame BackgroundColor="#8B5E45" CornerRadius="10" Padding="15,8" HasShadow="False" BorderColor="Transparent">
                            <Label Text="{Binding NomeRepresentante}" TextColor="#E0C09F" FontSize="14"/>
                        </Frame>
                    </VerticalStackLayout>

                    <Label Text="Insira a quantidade de Pessoas:" TextColor="White" FontSize="14" Margin="0,5,0,0"/>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Até 5 anos (Grátis)" VerticalOptions="Center" TextColor="White" FontSize="14"/>
                        <Button Grid.Column="1" Text="{Binding QtdAte5Anos, StringFormat='{0} selecionado(s)'}" Command="{Binding SelecionarQtdAte5Command}" BackgroundColor="#8B5E45" TextColor="White" CornerRadius="15" HeightRequest="35" Padding="15,0" FontSize="12"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="De 6 a 12 (Meia)" VerticalOptions="Center" TextColor="White" FontSize="14"/>
                        <Button Grid.Column="1" Text="{Binding Qtd6a12Anos, StringFormat='{0} selecionado(s)'}" Command="{Binding SelecionarQtd6a12Command}" BackgroundColor="#8B5E45" TextColor="White" CornerRadius="15" HeightRequest="35" Padding="15,0" FontSize="12"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Adulto (Inteira)" VerticalOptions="Center" TextColor="White" FontSize="14"/>
                        <Button Grid.Column="1" Text="{Binding QtdAdultos, StringFormat='{0} selecionado(s)'}" Command="{Binding SelecionarQtdAdultoCommand}" BackgroundColor="#8B5E45" TextColor="White" CornerRadius="15" HeightRequest="35" Padding="15,0" FontSize="12"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#703F25" Opacity="0.5" Margin="0,5"/>

                    <Label Text="Escolha a Atividade (Preço por pessoa):" 
                           TextColor="#E0C09F" FontSize="12" HorizontalOptions="Center"/>

                    <StackLayout BindableLayout.ItemsSource="{Binding ListaAtividades}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeShape="RoundRectangle 15"
                                        StrokeThickness="0"
                                        BackgroundColor="#8B5E45"
                                        Padding="15"
                                        Margin="0,5">

                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ReservaViewModel}}, Path=SelecionarAtividadeCommand}" 
                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>

                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal" />
                                            <VisualState x:Name="Selected">
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#5A321E" />
                                                    <Setter Property="Stroke" Value="#E0C09F" />
                                                    <Setter Property="StrokeThickness" Value="2" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>

                                    <Grid ColumnDefinitions="*, Auto">
                                        <Label Text="{Binding Nome}" TextColor="White" VerticalOptions="Center"/>
                                        <Label Text="{Binding PrecoPadrao, StringFormat='R$ {0:F2}'}" TextColor="White" FontAttributes="Bold" Grid.Column="1"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>

                    <BoxView HeightRequest="1" Color="#703F25" Opacity="0.5" Margin="0,5"/>

                    <Border StrokeShape="RoundRectangle 10"
                            BackgroundColor="#5A321E"
                            StrokeThickness="0"
                            Padding="15"
                            HorizontalOptions="Fill">
                        <Grid ColumnDefinitions="*, Auto">
                            <Label Text="Valor Total:" TextColor="#E0C09F" VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding TextoTotal}" 
                                   TextColor="White" 
                                   FontSize="18" 
                                   FontAttributes="Bold"/>
                        </Grid>
                    </Border>

                </VerticalStackLayout>
            </Border>
        </ScrollView>

        <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="15" Padding="30,10">
            <Button Grid.Column="0" Text="Voltar" BackgroundColor="#A5755C" TextColor="White" CornerRadius="20" HeightRequest="50"/>
            <Button Grid.Column="1" Text="Seguinte" Command="{Binding AvancarCommand}" BackgroundColor="#A5755C" TextColor="White" FontAttributes="Bold" CornerRadius="20" HeightRequest="50"/>
        </Grid>

        <Grid Grid.Row="3" BackgroundColor="#47150D" HeightRequest="60" ColumnDefinitions="*, *, *">
            <ImageButton Grid.Column="0" Source="icon_gear.png" HeightRequest="28" BackgroundColor="Transparent"/>
            <ImageButton Grid.Column="1" Source="icon_home_white.png" HeightRequest="35" BackgroundColor="Transparent"/>
            <ImageButton Grid.Column="2" Source="icon_bag.png" HeightRequest="28" BackgroundColor="Transparent"/>
        </Grid>

    </Grid>
</ContentPage>